<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_details_qwdd_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:background="#E5F1F5"
            android:gravity="end"
            android:text="前往地点："
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_details__qwdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:textSize="@dimen/x30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_details_qjlb_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:background="#E5F1F5"
            android:gravity="end"
            android:text="请假类别："
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_details__qjlb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:textSize="@dimen/x30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_details_jjrsj_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:background="#E5F1F5"
            android:gravity="end"
            android:text="节假时间："
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_details_jjrsj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:textSize="@dimen/x30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_details_qjsj_01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:background="#FCC06A"
            android:gravity="end"
            android:text="请假时间："
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_details_qjsj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:background="#FFFFCC"
            android:textSize="@dimen/x30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:background="#FCC06A"
            android:gravity="end"
            android:text="请假事由："
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_reson"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:background="#FFFFCC"
            android:textSize="@dimen/x30" />
    </LinearLayout>

</LinearLayout>