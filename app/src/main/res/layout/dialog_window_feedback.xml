<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/id_pop_dialog_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:background="@drawable/shape_window_feedback"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="治安单位"
            android:textStyle="bold"
            android:textColor="#42a5bf"/>

        <TextView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x8"
            android:layout_toEndOf="@+id/tv_title_01"
            android:layout_toRightOf="@+id/tv_title_01"
            android:background="@drawable/circle_01"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:padding="@dimen/x10"
            android:text="14"
            android:textSize="5sp"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bab8b8"/>


    <GridView
        android:id="@+id/gv_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/x20"
        android:padding="@dimen/x20"
        android:numColumns="4"
        android:columnWidth="80dp"
        android:horizontalSpacing="15dp"
        android:stretchMode="columnWidth">

    </GridView>

</LinearLayout>