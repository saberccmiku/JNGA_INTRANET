<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/x40"
        android:layout_marginTop="@dimen/x80" >

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginStart="@dimen/x30"
            android:background="@drawable/ic_arrow_left_grey600_24dp"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="警员动态明细"
            android:textSize="@dimen/x45" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 警员假期动态基本概况 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/x80"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x80"
                android:text="假期动态基本概况"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:background="#20A8CA" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 最近一次休假明细 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_bg"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/x80"
                android:paddingLeft="@dimen/x25"
                android:paddingRight="@dimen/x80"
                android:text="最近一次休假明细 "
                android:textColor="@android:color/white"
                android:textSize="@dimen/x40" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:background="#20A8CA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_details_qwdd_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:background="#E5F1F5"
                    android:gravity="end"
                    android:text="前往地点："
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_details__qwdd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_details_qjlb_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:background="#E5F1F5"
                    android:gravity="end"
                    android:text="请假类别："
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_details__qjlb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_details_jjrsj_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:background="#E5F1F5"
                    android:gravity="end"
                    android:text="节假时间："
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_details_jjrsj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_details_qjsj_01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:background="#FCC06A"
                    android:gravity="end"
                    android:text="请假时间："
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_details_qjsj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:background="#FFFFCC"
                    android:textSize="@dimen/x30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:background="#FCC06A"
                    android:gravity="end"
                    android:text="请假事由："
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_reson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:background="#FFFFCC"
                    android:textSize="@dimen/x30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>